<div class="box-body">
  <div class="form-group <%= 'has-error' unless @cover_letter_email_form.errors[:email_to].blank? %>">
    <%= form.label(:email_to, class: 'col-sm-2 control-label') do
      raw("#{t('activerecord.attributes.cover_letter.email_to')}<span class=\"text-red\" title=\"#{t('default.hint.mandatory')}\">*</span>")
    end %>
    <div class="col-sm-10">
      <%= form.text_field :email_to, class: 'form-control', autofocus: true, data: { testid: 'coverLetterEmailTo' } %>
      <%= show_validation_errors(@cover_letter_email_form.errors[:email_to]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @cover_letter_email_form.errors[:subject].blank? %>">
    <%= form.label(:subject, class: 'col-sm-2 control-label') do
      raw("#{t('activerecord.attributes.cover_letter.subject')}<span class=\"text-red\" title=\"#{t('default.hint.mandatory')}\">*</span>")
    end %>
    <div class="col-sm-10">
      <%= form.text_field :subject, class: 'form-control', data: { testid: 'coverLetterEmailSubject' } %>
      <%= show_validation_errors(@cover_letter_email_form.errors[:subject]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @cover_letter_email_form.errors[:attachment].blank? %>">
    <%= form.label :attachment, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.file_field :attachment, class: 'form-control', data: { testid: 'coverLetterEmailAttachment' } %>
      <%= show_validation_errors(@cover_letter_email_form.errors[:attachment]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @cover_letter_email_form.errors[:message].blank? %>">
    <%= form.label(:message, class: 'col-sm-2 control-label') do
      raw("#{t('activerecord.attributes.cover_letter.message')}<span class=\"text-red\" title=\"#{t('default.hint.mandatory')}\">*</span>")
    end %>
    <div class="col-sm-10">
      <%= form.text_area :message, class: 'tinymce', rows: 10, data: { testid: 'coverLetterMessage' }  %>
      <%= show_validation_errors(@cover_letter_email_form.errors[:message]) %>
    </div>
  </div>
</div>
