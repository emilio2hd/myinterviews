<% content_header t('interviews.head_title'), 'Editing' %>

<div class="row">
  <div class="col-lg-12">
    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title"><%= t('interviews.box_title') %></h3>
      </div><!-- /.box-header -->

      <!-- form start -->
      <%= form_for(@interview, html: { class: 'form-horizontal' }) do |form| %>
          <%= form.hidden_field :lock_version %>
          <%= render 'form', form: form %>
          <div class="box-footer">
            <%= form.submit t('button.save'), class: 'btn btn-primary' %>
            <%= link_to t('button.cancel'), @interview, class: 'btn btn-default' %>
          </div>
          <!-- /.box-footer -->
      <% end %>
      <!-- /.form -->
    </div>
  </div>
</div>
