<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('home.last_applications.box_head') %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table class="table no-margin">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.my_application.company') %></th>
            <th><%= t('activerecord.attributes.my_application.position') %></th>
            <th><%= t('activerecord.attributes.my_application.status') %></th>
            <th width="100" class="text-center"><%= t('activerecord.attributes.my_application.began_at') %></th>
          </tr>
        </thead>
        <tbody>
        <% @applications.each do |application| %>
          <tr>
            <td><%= link_to application.company, application %></td>
            <td><%= link_to application.position, application %></td>
            <td><%= status_label(application.status) %></td>
            <td class="text-center"><%= localize(application.began_at) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <%= link_to t('button.new', item: t('my_applications.item')), new_my_application_path, class: 'btn btn-sm btn-info btn-flat pull-left' %>
    <%= link_to t('home.last_applications.view_all'), my_applications_path,
                class: 'btn btn-sm btn-default btn-flat pull-right' %>
  </div>
  <!-- /.box-footer -->
</div>